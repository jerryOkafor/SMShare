{
    "configurations": [
        {
            "name": "composeApp",
            "type": "android-app",
            "workingDir": "$PROJECT_DIR$",
            "allowParallelRun": true,
            "module": "SMShare.composeApp.main",
            "destination": "Google Pixel 5"
        },
        {
            "name": "iosApp",
            "type": "command",
            "workingDir": "$PROJECT_DIR$/iosApp/",
            "program": "xcodebuild",
            "args": [
                "-workspace",
                "$PROJECT_DIR$/iosApp/iosApp.xcworkspace",
                "-scheme",
                "iosApp",
                "-configuration",
                "Debug",
                "OBJROOT=$PROJECT_DIR$/build/ios",
                "SYMROOT=$PROJECT_DIR$/build/ios",
                "-destination",
                "platform=iOS,name=iPhone (2)",
                "-allowProvisioningDeviceRegistration",
                "-allowProvisioningUpdates",
                "install"
            ]
        },
        {
            "name": "composeApp [Desktop]",
            "type": "gradle",
            "workingDir": "$PROJECT_DIR$",
            "tasks": [
                "desktopRun"
            ],
            "args": [
                "-DmainClass=com.jerryokafor.smshare.MainKt",
                "--quiet",
                "-p",
                "$PROJECT_DIR$/composeApp"
            ],
            "initScripts": {
                "flmapper": "ext.mapPath = { path -> null }"
            }
        },
        {
            "type": "gradle",
            "name": "Run Server",
            "workingDir": "$PROJECT_DIR$",
            "allowParallelRun": true,
            "tasks": [
                ":server:run"
            ],
        },
    ]
}

